---
import siteInfo from '../data/site-info';
import Icon from '../components/Icon.astro';

const { title, navigation, repo } = siteInfo;

---

<div class="nav-bar">
  <a href="/"><h1>{title}</h1></a>
  <nav>
    <ul>
    {navigation.map((navItem) => (
      <li>
        <a href={navItem.path}>{navItem.title}</a>
      </li>
    ))}
    <li class="seperator">|</li>
    <li>
      <a href={repo}>
        <Icon width="40px" height="40px" icon="github" />
        GitHub
      </a>
    </li>
    </ul>
  </nav>
</div>

<style lang="scss">
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  margin: 0.25rem auto 1.5rem auto;
  a {
    text-decoration: none;
  }

  h1 {
    margin: 0;
    background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
  }

  nav {
    background: var(--primary);
    border-radius: var(--curve-factor);
    background:  linear-gradient(45deg, rgb(var(--accent)) 20%, var(--secondary) 90%);
    ul {
      display: flex;
      list-style: none;
      margin: 0;
      padding: 0 0.25rem;
      flex-wrap: wrap;
      li {
        padding: 0.15rem 0.2rem;
        margin: 0.25rem;
        border-radius: var(--curve-factor);
        text-align: center;
        transition: ease-in 0.25s;
        &:not(.seperator) {
          min-width: 3.5rem;
        }
        a {
          color: var(--background);
          display: flex;
          gap: 0.5rem;
          align-items: center;
          justify-content: center;
        }
        &.seperator {
          color: var(--background);
          opacity: 0.5;
        }
        &:hover:not(.seperator) {
          background: var(--background);
          box-shadow: inset 0 0 0 1rem var(--background);
          a {
            color: var(--primary);
          }
        }
      }
    }
  }
}
</style>